          <mesh
            filename="package://ICRA2023_Quadruped_Competition/meshes/Nisopa_Kerb_Ramp.stl"/>
        </geometry>
        <material
          name="">
          <color
            rgba="0.40 0.39 0.43 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://ICRA2023_Quadruped_Competition/meshes/Nisopa_Kerb_Ramp.stl" />
        </geometry>
      </collision>
    </link>
  
  </xacro:macro>
</robot>